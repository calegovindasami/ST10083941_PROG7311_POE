@page "/"

<PageTitle>Index</PageTitle>

<MudStack>
    <MudText Typo="Typo.h1" Align="Align.Center">Welcome to Farm Central</MudText>
    <MudText Typo="Typo.h4" Class="mt-2 mb-4" Style="font-style: italic;" Align="Align.Center">"Simplify Your Stock Management, Maximize Your Harvest".</MudText>

    
    <MudCard Style="width:500px">
        <MudCardHeader>
            <CardHeaderContent>
