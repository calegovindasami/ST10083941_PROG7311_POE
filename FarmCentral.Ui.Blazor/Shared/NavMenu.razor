@using FarmCentral.Library.Shared.Contracts;
@using FarmCentral.Ui.Blazor.Providers;
@inject IAuthenticationService authService
<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <AuthorizeView>
        <Authorized >
            <MudNavLink Style="fixed-bottom" Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="Logout">Logout</MudNavLink>
            <MudNavLink Href="addproduct" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Add Product</MudNavLink>
        </Authorized>
        <NotAuthorized>
            
            <MudNavLink Href="register" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Registration</MudNavLink>
            <MudNavLink Href="login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Login</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>

@code {
    public async Task Logout()
    {
        await authService.Logout();
    }
}